class Solution {
    public int mySqrt(int x) {
        if (x < 2) return x; // sqrt(0) = 0, sqrt(1) = 1

        int left = 1, right = x / 2; // sqrt(x) will not be more than x/2 for x >= 2
        int ans = 0;

        while (left <= right) {
            int mid = left + (right - left) / 2;

            // Use long to prevent integer overflow when squaring
            long sq = (long) mid * mid;

            if (sq == x) {
                return mid; // perfect square
            } else if (sq < x) {
                ans = mid; // store last valid mid
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }

        return ans; // floor value
    }
}
